<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary" >@color/colorPrimary</item >
        <item name="colorPrimaryDark" >@color/colorPrimaryDark</item >
        <item name="colorAccent" >@color/colorAccent</item >
        <item name="android:windowIsTranslucent" >true</item >
    </style >

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar" >false</item >
        <item name="windowNoTitle" >true</item >
        <item name="android:windowIsTranslucent" >true</item >

    </style >

    <style name="LauncherB" parent="AppTheme.NoActionBar" >
        <item name="android:windowIsTranslucent">true</item>
    </style >

    <declare-styleable name="IRecyclerView" >
        <attr name="refreshHeaderLayout" format="reference" />
        <attr name="loadMoreFooterLayout" format="reference" />
        <attr name="refreshEnabled" format="boolean" />
        <attr name="loadMoreEnabled" format="boolean" />
        <attr name="refreshFinalMoveOffset" format="dimension" />
    </declare-styleable >

    <declare-styleable name="RectView" >
        <attr name="rv_radius" format="dimension" />
        <attr name="rv_stroke_color" format="color" />
        <attr name="rv_stroke_width" format="dimension" />
        <attr name="rv_bg_color" format="color" />
    </declare-styleable >

    <declare-styleable name="IconTvView" >
        <attr name="icon_width" format="integer" ></attr >
        <attr name="icon_height" format="integer" ></attr >
        <attr name="tv_size" format="integer" ></attr >
        <attr name="tv_color" format="color" ></attr >
        <attr name="icon_src" format="reference" ></attr >
        <attr name="tv_text" format="string" ></attr >

    </declare-styleable >

    <!--EasyRecyclerViewSideBar-->
    <declare-styleable name="EasyFloatingImageView" >
        <attr name="easyFloatingImageType" >
            <enum name="round"
                  value="2601" />
            <enum name="circle"
                  value="2602" />
        </attr >
        <attr name="easyFloatingBorderRadius"
              format="dimension" />
    </declare-styleable >

    <declare-styleable name="EasyRecyclerViewSidebar" >
        <attr name="easySidebarBackground"
              format="color" />
        <attr name="easySidebarFontColor"
              format="color" />
        <attr name="easySidebarTouchWrapArea"
              format="boolean" />
    </declare-styleable >
    <declare-styleable name="TextField" >
        <attr name="isDelete" format="boolean" />
    </declare-styleable >

    <declare-styleable name="CheckedImgView" >
        <attr name="on_src" format="reference" ></attr >
        <attr name="off_src" format="reference" ></attr >
        <attr name="duration" format="integer" ></attr >
    </declare-styleable >

    <!--RatingBar-->
    <declare-styleable name="RatingBar" tools:ignore="ResourceName" >
        <attr name="starImageSize" format="dimension" />
        <attr name="starImageWidth" format="dimension" />
        <attr name="starImageHeight" format="dimension" />
        <attr name="starImagePadding" format="dimension" />
        <attr name="starCount" format="integer" />
        <attr name="starEmpty" format="reference" />
        <attr name="starFill" format="reference" />
        <attr name="starHalf" format="reference" />
        <attr name="clickable" format="boolean" />
        <attr name="halfstart" format="boolean" />
    </declare-styleable >


    <declare-styleable name="GetCodeView" >
        <attr name="edt_hint" format="string" ></attr >
    </declare-styleable >


    <declare-styleable name="CheckBoxLayout" >
        <attr name="text_content" format="string" ></attr >
        <attr name="cb_checked" format="boolean" ></attr >
        <attr name="text_size" format="dimension|integer" ></attr >
        <attr name="text_color" format="reference" ></attr >
    </declare-styleable >

    <declare-styleable name="CheckedButton" >
        <attr name="normal_text" format="string" ></attr >
        <attr name="checked_text" format="string" ></attr >

    </declare-styleable >

    <declare-styleable name="AdsViewPager" >
        <attr name="is_need_click" format="boolean" ></attr >
        <attr name="vp_scale_type" format="integer" ></attr >
        <attr name="is_visibility" format="boolean" ></attr >
    </declare-styleable >

    <declare-styleable name="SideBar" >
        <!--字之间Vertical的距离-->
        <attr name="sb_tv_gap" format="dimension" />
        <!--字的Size-->
        <attr name="sb_tv_size" format="dimension" />
        <!--字的颜色-->
        <attr name="sb_tv_color" format="color" />
        <!--选中字的颜色-->
        <attr name="sb_tv_selected_color" format="color" />

    </declare-styleable >

    <!--TitleBar-->
    <declare-styleable name="TitleBar" >
        <attr name="title_bar_title" format="string" />
        <attr name="title_bar_right_text" format="string" />
        <attr name="title_bar_left_text" format="string" />
        <attr name="title_bar_right_img" format="reference" />
        <attr name="title_bar_right_left_img" format="reference" />
        <attr name="title_bar_left_img" format="reference" />
        <attr name="title_bar_style" format="integer" />
        <attr name="title_bar_left_img_enabled" format="boolean" />
    </declare-styleable >

    <!--TagFlowLayout-->
    <declare-styleable name="TagFlowLayout" >
        <attr name="auto_select_effect" format="boolean" ></attr >
        <attr name="max_select" format="integer" ></attr >
        <attr name="gravity" >
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr >
    </declare-styleable >

    <!--PicsRecyclerView-->
    <declare-styleable name="PicsRecyclerView" >
        <attr name="isNeedDownload" format="boolean" ></attr >
    </declare-styleable >



    <declare-styleable name="LineView" >
        <attr name="arrow_right_text" format="string" />
        <attr name="t_title" format="string" />
        <attr name="t_value" format="string" />
        <attr name="t_value_gravity" format="string" />
        <attr name="img_right_src" format="reference" />
        <attr name="img_left_src" format="reference" />
        <attr name="subtitle_img_left_src" format="reference" />
        <attr name="arrow_show" format="boolean" />
        <attr name="edit_able" format="boolean" />
        <attr name="img_right_padding" format="dimension" />
        <attr name="t_value_margin" format="dimension" />
        <attr name="t_value_hint" format="string" />
        <attr name="line_able" format="boolean" />
        <attr name="t_value_input_type" >
            <flag name="text" value="0x00000001" />
            <flag name="phone" value="0x00000003" />
            <flag name="number" value="0x00000002" />
        </attr >
    </declare-styleable >


    <style name="Launcher" parent="AppTheme.NoActionBar" >
        <item name="android:windowBackground" >@color/colorBg</item >
