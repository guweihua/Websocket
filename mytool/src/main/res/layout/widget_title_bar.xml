<?xml version="1.0" encoding="utf-8"?>
<merge
    android:id="@+id/app_bar_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.quansu.widget.baseview.BaseImageView
                android:id="@+id/img_left"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:padding="14dp"
                android:src="@drawable/icon_arrow_left"
                />

            <LinearLayout
                android:id="@+id/unreadlin"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_marginLeft="29dp"
                android:gravity="top|left"
                android:orientation="vertical"
                android:visibility="gone"

                >

                <TextView
                    android:layout_width="7px"
                    android:layout_height="7px"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/bg_a_circle_red"
                    app:layout_auto_baseheight="width"

                    />

            </LinearLayout >
        </RelativeLayout >

        <com.quansu.widget.baseview.BaseTextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:gravity="center"
            android:textColor="#EEEEEE"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="@string/save"
            >

        </com.quansu.widget.baseview.BaseTextView >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#262e39"
            android:textSize="17sp"
            tools:text="@string/app_name"
            />

        <com.quansu.widget.baseview.BaseImageView
            android:id="@+id/img_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|right"
            android:padding="15dp"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <com.quansu.widget.baseview.BaseImageView
            android:id="@+id/img_right_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|right"
            android:padding="15dp"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <com.quansu.widget.baseview.BaseTextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:paddingBottom="3.5dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="3.5dp"
            android:textColor="#000000"
            android:textSize="13.5sp"
            android:visibility="gone"
            tools:visibility="visible"
            >
        </com.quansu.widget.baseview.BaseTextView >

    </android.support.v7.widget.Toolbar >

</merge >

